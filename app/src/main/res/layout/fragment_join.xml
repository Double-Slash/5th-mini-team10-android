<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/chlg_active" />

    <EditText
        android:id="@+id/email_join"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login2"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="ayong@naver.com"
        android:textColor="#A93E3E3E"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/nickname_join"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login2"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="ayonggggg"
        android:textColor="#A93E3E3E"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/passwd_join"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/login2"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="000000"
        android:textColor="#A93E3E3E"
        android:textSize="16sp" />

    <Button
        android:id="@+id/joinBT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/joinch"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>